<?xml version="1.0" ?>
<robot name="dishwasher_door">
    <link name="world"/>
    <joint name="fixed" type="fixed">
        <parent link="world"/>
        <child link="doorFrameLink"/>
        <origin xyz="0.65 0 0.01" rpy="0 0 0"/>
    </joint>

    <link name="doorFrameLink">
       <visual>
            <origin rpy="0 0 0" xyz="0.05 0 1"/>
            <geometry>
                <box size="0.1 0.1 2"/>
            </geometry>
            <material name="door_material">
                <color rgba="0.8 0.8 0.3 1" />
            </material>
        </visual>
        <visual>
            <origin rpy="0 0 0" xyz="0.95 0 1"/>
            <geometry>
                <box size="0.1 0.1 2"/>
            </geometry>
            <material name="door_material"/>
        </visual>
        <visual>
            <origin rpy="0 0 0" xyz="0.5 0 1.95"/>
            <geometry>
                <box size="1 0.1 0.1"/>
            </geometry>
            <material name="door_material"/>
        </visual>
    </link>

    <link name="doorLink">
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0.25"/>
            <mass value="1.0"/>
            <inertia ixx="0.048966669" ixy="0" ixz="0" iyy="0.046466667" iyz="0" izz="0.0041666669"/>
        </inertial>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.25"/>
            <geometry>
                <box size="0.6 0.02 0.5"/>
            </geometry>
            <material name="door_material"/>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.25"/>
            <geometry>
                <box size="0.6 0.02 0.5"/>
            </geometry>
        </collision>

    </link>
    <joint name="joint_doorFrameLink_doorLink" type="continuous">
        <parent link="doorFrameLink"/>
        <child link="doorLink"/>
        <dynamics damping="1.0" friction="4.0"/>
        <origin xyz="0 0 0"/>
        <axis xyz="1 0 0"/>
    </joint>

    <link name="handleLink">
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <mass value="0.1"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
        </inertial>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.005" length="0.10"/>
            </geometry>
            <material name="handle_matreial">
                <color rgba="0.8 0.8 0.3 1" />
            </material>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.005" length="0.010"/>
            </geometry>
        </collision>
    </link>

    <joint name="handle_joint" type="fixed">
        <parent link="doorLink"/>
        <child link="handleLink"/>
        <origin xyz="0.035 0 0.47" rpy="1.5708 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="door_handle_dummy_link">
        <!-- This dummy link is added s.t. the handle is the parent of some link and we can find the handle's index. -->
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <mass value="0.1"/>
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
        </inertial>
    </link>

    <joint name="door_handle_dummy_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="handleLink"/>
        <child link="door_handle_dummy_link"/>
    </joint>

</robot>
