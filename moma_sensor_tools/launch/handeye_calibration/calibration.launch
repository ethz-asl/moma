<?xml version="1.0" ?>
<launch>
    <arg name="camera_pc" default="true"/>
    <arg name="operator_pc" default="true"/>
    <arg name="debug"       default="false"/>

    <arg name="robot_base_frame" default="base_link"/>
    <arg name="robot_effector_frame" default="gripper_r_base"/>

    <!-- Intrinsic camera calibration published by the kinect -->

    <!-- rectification, apriltag detection, rviz -->
    <include file="$(find moma_sensor_tools)/launch/handeye_calibration/apriltag_tracking.launch" if="$(arg camera_pc)">
    </include>

	<include file="$(find moma_sensor_tools)/launch/handeye_calibration/easy_handeye.launch" if="$(arg operator_pc)">
	  <arg name="robot_base_frame" 			value="$(arg robot_base_frame)"/>
	  <arg name="robot_effector_frame" 		value="$(arg robot_effector_frame)"/>
	  <arg name="tracking_base_frame" 		value="kinect_rgb_camera_link"/>
	  <arg name="tracking_marker_frame" 	value="tag_2"/>
	  <arg name="start_rviz" 	            value="true"/>
      <arg name="eye_on_hand" 	            value="false"/>
      <arg name="start_sampling_gui" 	    value="true"/>
	</include>
</launch>
