<?xml version="1.0"?>
<launch>
  <arg name="robot_name"  default="panda"/>
  <arg name="test"        default="false"/>
  <arg name="rviz"        default="true"/>
  <arg name="rvizconfig"  default="$(find moma_ocs2)/rviz/mobile_manipulator.rviz"/>
  <arg name="urdf"       default="$(find moma_ocs2)/urdf/$(arg robot_name).urdf"/>

  <param name="robot_description_for_mpc" command="$(find xacro)/xacro --inorder $(arg urdf)"/>
  <param name="use_gui" value="true"/>

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
    <remap from="robot_description" to="robot_description_for_mpc"/>
  </node>
  <node if="$(arg test)" name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"/>
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(arg rvizconfig)" output="screen" if="$(arg rviz)"/>
</launch>
