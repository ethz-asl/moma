<?xml version="1.0"?>
<launch>

  <!-- Robot arguments -->
  <arg name="arm_id" default="panda" />
  <arg name="use_gripper" default="true" />
  <arg name="moveit" default="true"/>
  <arg name="moveit_planner" default="ompl"/>
  <arg name="use_fixed_camera" default="true"/>
  <arg name="use_wrist_camera" default="false" />

  <!-- Sim arguments -->
  <arg name="gazebo" default="true" />
  <arg name="headless" default="false" />
  <arg name="paused" default="false" />
  <arg name="use_sim_time" default="true" />
  <arg name="world" default="$(find moma_gazebo)/worlds/moma_corner.world"/>
  <arg name="rviz" default="true" />

  <!-- Joint positions -->
  <arg name="initial_joint_positions"
      default="-J $(arg arm_id)_joint1 -0.15708
              -J $(arg arm_id)_joint2 -0.331613
              -J $(arg arm_id)_joint3 0
              -J $(arg arm_id)_joint4 -2.07694
              -J $(arg arm_id)_joint5 0
              -J $(arg arm_id)_joint6 1.74533
              -J $(arg arm_id)_joint7 0.663225
              -J $(arg arm_id)_finger_joint1 0.01
              -J $(arg arm_id)_finger_joint2 0.01" />

  <include file="$(find moma_gazebo)/launch/panda_sim.launch" 
    pass_all_args="true"/>

</launch>
